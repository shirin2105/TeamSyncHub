// Authorization middleware for manager only
function authorizeManager(req, res, next) {
    if (req.user.role !== 'Manager') {
        return res.status(403).json({ success: false, message: 'B·∫°n kh√¥ng c√≥ quy·ªÅn th·ª±c hi·ªán thao t√°c n√†y' });
    }
    next();
}

